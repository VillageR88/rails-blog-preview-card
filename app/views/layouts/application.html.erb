            <link rel="icon" type="image/x-icon" href="https://raw.githubusercontent.com/VillageR88/rails-blog-preview-card/refs/heads/master/favicon.ico">
     

            <%# Includes all stylesheet files in app/assets/stylesheets %>
              <%= stylesheet_link_tag :app %>
